{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* Type Safety */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Node Types */
    "types": ["node"],
    "lib": ["ES2020"],

    /* Debugging */
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}